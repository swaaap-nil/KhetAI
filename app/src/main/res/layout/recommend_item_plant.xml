<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/featured_bg"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recommend_item_plant_picture"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:shapeAppearanceOverlay="@style/Homepage_corner" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_below="@+id/recommend_item_plant_picture"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/recommend_item_plant_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/recommend_item_plant_title"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="1"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recommend_item_plant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/poppins"
            android:text="$500"
            android:textColor="#2E7D32"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>