<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/your_crop_picture"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/green_pale"
        android:contentDescription="plantpicture"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20dp" />


    <TextView
        android:id="@+id/your_crop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="20dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Sample Text"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/your_crop_picture"
        app:layout_constraintStart_toStartOf="@+id/your_crop_picture" />


    <RelativeLayout

        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
